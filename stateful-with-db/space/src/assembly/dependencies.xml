<assembly>
    <id>package-dependencies-in-lib</id>
    <!--baseDirectory>lib</baseDirectory-->
    <formats>
        <format>jar</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/classes</directory>
            <lineEnding>keep</lineEnding>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!-- non-transitive dependencies -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>com.mycompany.app:model</include>
                <include>${db.driver.groupId}:${db.driver.artifactId}</include>
            </includes>
        </dependencySet>
        <!-- transitive dependencies -->
        <dependencySet>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <!-- exclude>org.hsqldb:hsqldb</exclude -->
            </excludes>
            <includes>
                <include>org.hibernate:hibernate-core</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
